<style>
#display-doctors-div {
  width: 100%; 
  margin: 0 auto; 
  border: 1px solid #ddd; 
  padding: 10px;
  font-family: Arial, sans-serif; 
}

.header {
  display: flex; 
  justify-content: space-between;
  align-items: center; 
  padding: 10px;
  background-color: #f5f5f5; 
  margin-bottom:10px;
}

.header div {
  flex: 1;
  text-align: center; 
  font-weight: bold;
}

.status.scheduled {
  color: rgb(	95	,168	,234);
}

.status.canceled {
  color: rgb(181,94,95);
}

.status.completed {
  color: rgb(18	,212,162);
}

.disabled {
  opacity: 0.5;
  cursor: not-allowed;
  pointer-events: none;
}



</style>

<h1>All Appointments</h1>

<div class="display-doctors-div">
  <% @all_appointments.each do |appointment| %>
      <%= render partial:"each_appointment" , locals: {appointment:appointment}%>
  <% end %>
</div>



