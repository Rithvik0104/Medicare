<%= form_with(url: manage_doctors_path, method: :post, remote: true ,id:"doctor_register_form") do |f| %>

  <div class="form-group">
    <%= f.label :avatar, "Doctor Photo", class: "form-control-label" %>
    <%= f.file_field :avatar, class: "form-control-file" ,id:"doctor_picture"%>
  </div>

  <div class="form-group">
    <%= f.label :name, "Name", class: "form-control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email", class: "form-control-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, "Phone Number", class: "form-control-label" %>
    <%= f.text_field :phone_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :year_of_experience_consultation_fee, "Year of experience & Consultation Fee", class: "form-control-label" %>
    <div class="row">
      <div class="col-md-6">
        <%= f.text_field :years_of_experience, class: "form-control", placeholder: "Year of Experience" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :consultation_fee, class: "form-control", placeholder: "Consultation Fee" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :specialization, "Specialization", class: "form-control-label" %>
    <%= f.select :specialization, @specializations.map { |s| [s.name, s.id] }, include_blank: "Select Specialization", class: "form-control" %>
  </div>
   
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary", data: { 'bs-dismiss': "modal" } ,id:"submit-btn" %>
  </div>

<% end %>
