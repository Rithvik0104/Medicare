<%= stylesheet_link_tag "navbar/patient_navbar" %>
<nav class="navbar navbar-expand-lg navbar-light justify-content-between ">  <div class="container">
    <%= link_to "Medicare", root_path, class: "nav-link text-uppercase fw-bold d-flex align-items-center", style: "color: white; margin: 0; line-height: 50px;"%>
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvaslightNavbar" aria-controls="offcanvaslightNavbar" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvaslightNavbar" aria-labelledby="offcanvaslightNavbarLabel">
      <div class="offcanvas-header bg-primary">
        <h5 class="offcanvas-title text-light" id="offcanvaslightNavbarLabel">Medicare</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav flex-grow-1 justify-content-end">
          <% if current_user && current_user.patient? %>
           
            <li class="nav-link d-flex align-items-center">
              <%= link_to "Profile", edit_user_registration_path, class: "nav-link text-light fw-bold"%>
            </li>
            <li class="nav-link d-flex align-items-center">
              <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link text-light btn btn-outline-danger fw-bold"%>
            </li>
            <% if current_user.avatar.attached? %>
            <li class="nav-item text-center">
              <%= image_tag current_user.avatar, class: 'avatar-image'%>
            </li>
          
          <% else %>
          <li class="nav-item text-center">
               <%= image_tag 'avatars/default_avatar.png', class: 'avatar-image'  %>
            </li>
          <% end %>
          <% else %>
            <li class="nav-link d-flex align-items-center">
              <%= link_to "Sign in", new_user_session_path, class: "nav-link text-light fw-bold"%>
            </li>
            <li class="nav-link d-flex align-items-center">
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-light fw-bold"%>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</nav>
