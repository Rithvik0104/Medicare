<div id="display-medicines-div" class="table-responsive">
  <div class="table-wrapper">
    <div class="table-header">
      <div class="row">
        <div class="col-md-1">Name</div>
        <div class="col-md-1">Description</div>
        <div class="col-md-1">Dosage</div>
        <div class="col-md-1">Price</div>
        <div class="col-md-1">Need Prescription</div>

        <div class="col-md-2">Actions</div>
      </div>
    </div>
    <div class="table-body">
      <% @medicines.each do |med| %>
        <div class="row">
          <div class="col-md-1"><%= med.name %></div>
          <div class="col-md-1"><%= med.description %></div>
          <div class="col-md-1"><%= med.dosage %></div>
          <div class="col-md-1"><%= med.price %></div>
          <div class="col-md-1"><%= med.need_prescription%></div>
 
          <div class="col-md-2">
            <%= button_to "Add to cart", cart_items_path, method: :post, params:{medicine_id: med.id},class: "btn btn-info" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
